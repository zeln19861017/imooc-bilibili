<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.bilibili.dao.FollowingGroupDao">


    <!-- resultType 为user实体-->
    <select id="getByType" parameterType="java.lang.String" resultType="com.imooc.bilibili.domain.FollowingGroup">
        select * from  t_following_group where `type` = #{type}
    </select>


    <!-- resultType 为user实体-->
    <select id="getById" parameterType="java.lang.String" resultType="com.imooc.bilibili.domain.FollowingGroup">
        select * from  t_following_group where id = #{id}
    </select>

<!--    // 获取用户关注的所有分组信息，包括自定义和默认分的0,1,2-->
    <select id="getByUserId" resultType="com.imooc.bilibili.domain.FollowingGroup">
        select * from  t_following_group where  userId = #{userId} or `type` in ('0','1','2')
    </select>

</mapper>
